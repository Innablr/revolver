{
  "$schema": "https://biomejs.dev/schemas/1.9.1/schema.json",
  "linter": {
    "enabled": true,
    "rules": {
      "recommended": true,
      "complexity": {
        "noForEach": "off",
        "noUselessStringConcat": "error",
        "noUselessUndefinedInitialization": "error"
      },
      "correctness": {
        "noUnusedFunctionParameters": "error"
      },
      "nursery": {
        "noDuplicateElseIf": "error",
        "useAdjacentOverloadSignatures": "error"
      },
      "suspicious": {
        "noEvolvingTypes": "error",
        "noExplicitAny": "off",
        "useErrorMessage": "error",
        "useNumberToFixedDigitsArgument": "error"
      },
      "style": {
        "noNonNullAssertion": "off",
        "noUselessElse": "off",
        "noYodaExpression": "error",
        "useDefaultSwitchClause": "error"
      },
      "performance": {
        "noAccumulatingSpread": "off"
      }
    },
    "ignore": ["**/*.js", "**/*.d.ts", "**/docs", "**/coverage", "**/cdk.json", "**/.cdk.staging", "**/cdk.out", "output"]
  },
  "overrides": [
    {
      "include": ["*.spec.ts"],
      "linter": {
        "rules": {
          "correctness": {
            "noUndeclaredVariables": "off"
          }
        }
      }
    }
  ],
  "vcs": {
    "enabled": true,
    "clientKind": "git",
    "useIgnoreFile": true
  },
  "formatter": {
    "enabled": true,
    "formatWithErrors": false,
    "ignore": [],
    "attributePosition": "auto",
    "indentStyle": "space",
    "indentWidth": 2,
    "lineEnding": "lf",
    "lineWidth": 120
  },
  "javascript": {
    "formatter": {
      "quoteStyle": "single",
      "lineWidth": 120
    }
  },
  "json": {
    "linter": {
      "enabled": false
    },
    "formatter": {
      "enabled": false
    }
  }
}
